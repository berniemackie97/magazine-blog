---
import MastheadBar from './MastheadBar.astro';
import type { CollectionEntry } from 'astro:content';

import '../../styles/tailwind.css';
import '../../styles/global.css';
import '../../styles/components/layout.css';

interface Props {
  title?: string;
  description?: string;
  accent?: string;
  publication?: CollectionEntry<'publications'> | null;
  lang?: string;
}

const {
  title = 'The Rack',
  description = 'Programming tutorials and stories, organized like magazines on a newsstand.',
  accent,
  publication,
  lang = 'en',
} = Astro.props;

const accentValue = (accent ?? publication?.data.accent)?.trim() || null;
const rootStyle = accentValue ? `--accent: ${accentValue};` : undefined;
const publicationKey = publication?.id ?? 'global';
---
<!DOCTYPE html>
<html lang={lang} style={rootStyle} data-publication={publicationKey}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="light" />
    <meta name="description" content={description} />
    {accentValue ? <meta name="theme-color" content={accentValue} /> : <meta name="theme-color" content="#faf7f2" />}
    <title>{title}</title>

    <slot name="head" />
  </head>
  <body>
    <a class="visually-hidden skip-link" href="#content">
      Skip to content
    </a>

    <MastheadBar publication={publication} />

    <main id="content">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="page-shell">
        <div class="footer-content">
          <p class="footer-brand">The Rack</p>
          <p class="footer-tagline">Programming tutorials and stories, organized like magazines.</p>
          <nav class="footer-links">
            <a href="/issues">Issues</a>
            <a href="/publications">Publications</a>
            <a href="/archive">Archive</a>
          </nav>
        </div>
      </div>
    </footer>
  </body>
</html>
