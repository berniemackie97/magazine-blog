---
import type { CollectionEntry } from 'astro:content';

interface Props {
  publication?: CollectionEntry<'publications'> | null;
  issue?: any;
  recentPosts?: any[];
  tableOfContents?: { id: string; text: string; level: number }[];
  showSubscribe?: boolean;
}

const {
  publication,
  issue,
  recentPosts = [],
  tableOfContents = [],
  showSubscribe = true
} = Astro.props;
---

<aside class="sidebar">
  {/* Table of Contents */}
  {tableOfContents.length > 0 && (
    <div class="sidebar__section sidebar__toc">
      <h3 class="sidebar__heading">In This Article</h3>
      <nav class="toc-nav">
        <ul class="toc-list">
          {tableOfContents.map((item) => (
            <li class={`toc-item toc-item--${item.level}`}>
              <a href={`#${item.id}`} class="toc-link">{item.text}</a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
  )}

  {/* Current Issue */}
  {issue && (
    <div class="sidebar__section sidebar__issue">
      <h3 class="sidebar__heading">This Issue</h3>
      <a href={`/issues/${issue.data.publicationId}/${issue.data.issueSlug}`} class="issue-card-mini">
        <span class="issue-card-mini__vol">Vol {issue.data.volume} No {issue.data.number}</span>
        <span class="issue-card-mini__title">{issue.data.displayTitle}</span>
        <span class="issue-card-mini__theme">{issue.data.theme}</span>
      </a>
    </div>
  )}

  {/* Recent Posts */}
  {recentPosts.length > 0 && (
    <div class="sidebar__section sidebar__recent">
      <h3 class="sidebar__heading">Recent Articles</h3>
      <ul class="recent-list">
        {recentPosts.slice(0, 5).map((post: any) => (
          <li class="recent-item">
            <a href={`/posts/${post.slug ?? post.data.slug}`} class="recent-link">
              <span class="recent-headline">{post.data.headline}</span>
              <span class="recent-pub">{post.data.publicationId}</span>
            </a>
          </li>
        ))}
      </ul>
    </div>
  )}

  {/* Publication Info */}
  {publication && (
    <div class="sidebar__section sidebar__pub">
      <h3 class="sidebar__heading">About {publication.data.name}</h3>
      <p class="sidebar__desc">{publication.data.description}</p>
      <a href={`/publications/${publication.id}`} class="sidebar__link">
        View all issues
      </a>
    </div>
  )}

  {/* Subscribe CTA */}
  {showSubscribe && publication && (
    <div class="sidebar__section sidebar__subscribe">
      <div class="subscribe-box">
        <span class="subscribe-box__label">Stay Updated</span>
        <p class="subscribe-box__text">Get notified when new issues drop.</p>
        <a href={`/publications/${publication.id}/rss.xml`} class="subscribe-box__btn">
          RSS Feed
        </a>
      </div>
    </div>
  )}
</aside>

<style>
  .sidebar {
    position: sticky;
    top: 100px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1rem 0;
  }

  .sidebar__section {
    padding: 1rem;
    background: var(--surface-raised);
    border: 2px solid var(--ink-faint);
    border-radius: 8px;
  }

  .sidebar__heading {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--ink-muted);
    margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px dashed var(--ink-faint);
  }

  /* Table of Contents */
  .toc-nav {
    max-height: 300px;
    overflow-y: auto;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: 0.35rem;
  }

  .toc-item--2 {
    padding-left: 0;
  }

  .toc-item--3 {
    padding-left: 0.75rem;
  }

  .toc-link {
    font-size: 0.8rem;
    color: var(--ink-body);
    line-height: 1.3;
    display: block;
    transition: color 0.15s ease;
  }

  .toc-link:hover {
    color: var(--pop-coral);
  }

  /* Issue Card Mini */
  .issue-card-mini {
    display: block;
    padding: 0.75rem;
    background: var(--surface-sunken);
    border: 2px solid var(--ink-faint);
    border-radius: 6px;
    transition: border-color 0.15s ease;
  }

  .issue-card-mini:hover {
    border-color: var(--ink-muted);
  }

  .issue-card-mini__vol {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.6rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ink-muted);
    margin-bottom: 0.25rem;
  }

  .issue-card-mini__title {
    display: block;
    font-family: var(--font-display);
    font-size: 0.9rem;
    color: var(--ink-rich);
    margin-bottom: 0.25rem;
  }

  .issue-card-mini__theme {
    display: inline-block;
    font-size: 0.7rem;
    padding: 0.15rem 0.4rem;
    background: var(--surface-base);
    border-radius: 3px;
    color: var(--ink-muted);
  }

  /* Recent Posts */
  .recent-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .recent-item {
    margin-bottom: 0.75rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--surface-sunken);
  }

  .recent-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }

  .recent-link {
    display: block;
  }

  .recent-headline {
    display: block;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--ink-body);
    line-height: 1.3;
    margin-bottom: 0.15rem;
    transition: color 0.15s ease;
  }

  .recent-link:hover .recent-headline {
    color: var(--pop-coral);
  }

  .recent-pub {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    letter-spacing: 0.05em;
    color: var(--ink-muted);
    text-transform: uppercase;
  }

  /* Publication Info */
  .sidebar__desc {
    font-size: 0.85rem;
    color: var(--ink-muted);
    line-height: 1.5;
    margin-bottom: 0.75rem;
  }

  .sidebar__link {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--pop-coral);
    letter-spacing: 0.05em;
  }

  .sidebar__link:hover {
    color: var(--ink-rich);
  }

  /* Subscribe Box */
  .subscribe-box {
    text-align: center;
    padding: 0.5rem;
  }

  .subscribe-box__label {
    display: block;
    font-family: var(--font-display);
    font-size: 0.9rem;
    color: var(--ink-rich);
    margin-bottom: 0.35rem;
  }

  .subscribe-box__text {
    font-size: 0.8rem;
    color: var(--ink-muted);
    margin-bottom: 0.75rem;
  }

  .subscribe-box__btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    background: var(--pop-coral);
    color: white;
    border: 2px solid var(--ink-rich);
    border-radius: 4px;
    box-shadow: 2px 2px 0 var(--ink-rich);
    transition: transform 0.1s ease, box-shadow 0.1s ease;
  }

  .subscribe-box__btn:hover {
    transform: translate(-1px, -1px);
    box-shadow: 3px 3px 0 var(--ink-rich);
    color: white;
  }
</style>
