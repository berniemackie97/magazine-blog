---
import type { CollectionEntry } from 'astro:content';

import '../../styles/components/sidebar.css';

interface Props {
  publication?: CollectionEntry<'publications'> | null;
  issue?: any;
  recentPosts?: any[];
  tableOfContents?: { id: string; text: string; level: number }[];
  showSubscribe?: boolean;
}

const {
  publication,
  issue,
  recentPosts = [],
  tableOfContents = [],
  showSubscribe = true
} = Astro.props;
---

<aside class="sidebar">
  {/* Table of Contents */}
  {tableOfContents.length > 0 && (
    <div class="sidebar__section sidebar__toc">
      <h3 class="sidebar__heading">In This Article</h3>
      <nav class="toc-nav">
        <ul class="toc-list">
          {tableOfContents.map((item) => (
            <li class={`toc-item toc-item--${item.level}`}>
              <a href={`#${item.id}`} class="toc-link">{item.text}</a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
  )}

  {/* Current Issue */}
  {issue && (
    <div class="sidebar__section sidebar__issue">
      <h3 class="sidebar__heading">This Issue</h3>
      <a href={`/issues/${issue.data.publicationId}/${issue.data.issueSlug}`} class="issue-card-mini">
        <span class="issue-card-mini__vol">Vol {issue.data.volume} No {issue.data.number}</span>
        <span class="issue-card-mini__title">{issue.data.displayTitle}</span>
        <span class="issue-card-mini__theme">{issue.data.theme}</span>
      </a>
    </div>
  )}

  {/* Recent Posts */}
  {recentPosts.length > 0 && (
    <div class="sidebar__section sidebar__recent">
      <h3 class="sidebar__heading">Recent Articles</h3>
      <ul class="recent-list">
        {recentPosts.slice(0, 5).map((post: any) => (
          <li class="recent-item">
            <a href={`/posts/${post.slug ?? post.data.slug}`} class="recent-link">
              <span class="recent-headline">{post.data.headline}</span>
              <span class="recent-pub">{post.data.publicationId}</span>
            </a>
          </li>
        ))}
      </ul>
    </div>
  )}

  {/* Publication Info */}
  {publication && (
    <div class="sidebar__section sidebar__pub">
      <h3 class="sidebar__heading">About {publication.data.name}</h3>
      <p class="sidebar__desc">{publication.data.description}</p>
      <a href={`/publications/${publication.id}`} class="sidebar__link">
        View all issues
      </a>
    </div>
  )}

  {/* Subscribe CTA */}
  {showSubscribe && publication && (
    <div class="sidebar__section sidebar__subscribe">
      <div class="subscribe-box">
        <span class="subscribe-box__label">Stay Updated</span>
        <p class="subscribe-box__text">Get notified when new issues drop.</p>
        <a href={`/publications/${publication.id}/rss.xml`} class="subscribe-box__btn">
          RSS Feed
        </a>
      </div>
    </div>
  )}
</aside>
