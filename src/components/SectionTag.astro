---
interface Props {
  label: string;
}

const { label } = Astro.props;
---
<span class="caps inline-flex items-center gap-2 rounded-md border border-[var(--rule)] bg-gradient-to-r from-[var(--accent)]/20 to-[var(--accent)]/10 px-3 py-1 text-[10px] font-semibold tracking-[0.16em] text-[var(--ink)] shadow-paper">
  <span class="h-2 w-2 rounded-full bg-[var(--accent)]"></span>
  {label}
</span>
