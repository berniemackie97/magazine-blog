---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---
<aside class="my-6 rounded-md border border-[var(--rule)] bg-[var(--paper)]/85 p-4 shadow-paper">
  {title && <div class="caps mb-2 text-xs font-semibold tracking-[0.18em] text-[var(--accent)]">{title}</div>}
  <div class="text-sm leading-relaxed text-neutral-100">
    <slot />
  </div>
</aside>
