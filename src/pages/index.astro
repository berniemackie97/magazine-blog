---
import Layout from '../components/layout/Layout.astro';
import IssueCoverCard from '../components/issues/IssueCoverCard.astro';
import { getCollection, getEntry } from 'astro:content';
import { getPostsForIssue, getLatestPosts } from '../lib/data';
import { coverLinesFromPosts } from '../lib/lineup';

// Get all publications for sidebar
const allPublications = await getCollection('publications');
const publications = allPublications.filter((p) => p.data.isFeatured);

// Get latest locked issues across all publications
const allIssues = await getCollection('issues');
const latestIssues = allIssues
  .filter((i) => i.data.status === 'locked')
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 8);

const latestItems = await Promise.all(
  latestIssues.map(async (issue) => {
    const publication = await getEntry('publications', issue.data.publicationId);
    const posts = await getPostsForIssue(issue.data.publicationId, issue.data.issueSlug);
    const tilt = (Math.random() - 0.5) * 6;
    return {
      issue,
      publication: publication!,
      coverLines: coverLinesFromPosts(posts as any, 4),
      tilt
    };
  })
);

// Get per-publication shelves
const shelves = await Promise.all(
  publications.map(async (publication) => {
    const pubIssues = allIssues
      .filter((i) => i.data.publicationId === publication.id && i.data.status === 'locked')
      .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
      .slice(0, 4);

    const items = await Promise.all(
      pubIssues.map(async (issue) => {
        const posts = await getPostsForIssue(publication.id, issue.data.issueSlug);
        const tilt = (Math.random() - 0.5) * 5;
        return {
          issue,
          publication,
          coverLines: coverLinesFromPosts(posts as any, 4),
          tilt
        };
      })
    );
    return { publication, items };
  })
);

// Get recent posts for sidebar
const recentPosts = await getLatestPosts(5);
const pubMap = Object.fromEntries(allPublications.map((p) => [p.id, p]));
---

<Layout title="The Rack">
  <div class="rack page-shell">
    <!-- Hero Section -->
    <section class="rack__hero">
      <h1 class="rack__title">Fresh Off The Press</h1>
      <p class="rack__subtitle">Grab a cover, crack it open, start reading</p>
    </section>

    <div class="rack__layout">
      <div class="rack__main">
        <!-- Latest Issues Shelf -->
        {latestItems.length > 0 && (
          <section class="rack__shelf rack__shelf--featured">
            <h2 class="shelf__label">Latest Issues</h2>
            <div class="shelf__container">
              <div class="shelf__row">
                {latestItems.map((item, idx) => (
                  <div class="shelf__item" style={`--tilt: ${item.tilt}deg; --idx: ${idx}`}>
                    <IssueCoverCard
                      issue={item.issue}
                      publication={item.publication}
                      coverLines={item.coverLines}
                      showStatus
                    />
                  </div>
                ))}
              </div>
              <div class="shelf__ledge"></div>
            </div>
          </section>
        )}

        <!-- Quick Actions -->
        <section class="actions-row">
          <a href="/issues" class="btn">Browse All Issues</a>
          <a href="/publications" class="btn btn--secondary">Publications</a>
          <a href="/archive" class="btn btn--secondary">Archive</a>
        </section>

        <!-- Feature Cards -->
        <section class="feature-section">
          <div class="feature-grid">
            <div class="feature-card">
              <div class="feature-card__label">Curated</div>
              <h3 class="feature-card__title">Themed Issues</h3>
              <p class="feature-card__body">Each issue is carefully curated around a theme, with articles that build on each other.</p>
            </div>
            <div class="feature-card">
              <div class="feature-card__label">Practical</div>
              <h3 class="feature-card__title">Real Code</h3>
              <p class="feature-card__body">No fluff. Every tutorial includes working examples you can actually use.</p>
            </div>
            <div class="feature-card">
              <div class="feature-card__label">Fresh</div>
              <h3 class="feature-card__title">Regular Drops</h3>
              <p class="feature-card__body">New issues drop regularly. Subscribe to never miss a release.</p>
            </div>
          </div>
        </section>

        <!-- Per-Publication Shelves -->
        {shelves.filter(s => s.items.length > 0).map((shelf) => (
          <section class="rack__shelf" style={`--shelf-accent: ${shelf.publication.data.accent}`}>
            <h2 class="shelf__label">{shelf.publication.data.name}</h2>
            <div class="shelf__container">
              <div class="shelf__row">
                {shelf.items.map((item, idx) => (
                  <div class="shelf__item" style={`--tilt: ${item.tilt}deg; --idx: ${idx}`}>
                    <IssueCoverCard
                      issue={item.issue}
                      publication={item.publication}
                      coverLines={item.coverLines}
                    />
                  </div>
                ))}
              </div>
              <div class="shelf__ledge"></div>
            </div>
            <div class="shelf__cta">
              <a href={`/publications/${shelf.publication.id}`} class="btn-link">
                See all from {shelf.publication.data.name}
              </a>
            </div>
          </section>
        ))}
      </div>

      <!-- Sidebar -->
      <aside class="rack__sidebar">
        <!-- Publications Quick Links -->
        <div class="sidebar-card">
          <h3 class="sidebar-card__title">Publications</h3>
          <ul class="pub-links">
            {allPublications.map((pub) => (
              <li>
                <a href={`/publications/${pub.id}`} class="pub-link" style={`--pub-color: ${pub.data.accent}`}>
                  <span class="pub-link__dot"></span>
                  <span class="pub-link__name">{pub.data.name}</span>
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Recent Articles -->
        <div class="sidebar-card">
          <h3 class="sidebar-card__title">Recent Articles</h3>
          <ul class="recent-posts">
            {recentPosts.map((post) => {
              const pub = pubMap[post.data.publicationId];
              return (
                <li>
                  <a href={`/posts/${post.slug}`} class="recent-post">
                    <span class="recent-post__pub" style={`color: ${pub?.data.accent ?? 'var(--ink-muted)'}`}>
                      {pub?.data.name ?? 'Unknown'}
                    </span>
                    <span class="recent-post__title">{post.data.headline}</span>
                  </a>
                </li>
              );
            })}
          </ul>
          <a href="/archive" class="btn-link sidebar-card__more">View all articles</a>
        </div>

        <!-- About Blurb -->
        <div class="sidebar-card sidebar-card--accent">
          <h3 class="sidebar-card__title">What's The Rack?</h3>
          <p class="sidebar-card__text">
            A collection of themed tech magazines. Each issue is curated around a topic, with articles that actually teach you something.
          </p>
          <p class="sidebar-card__text">
            No endless scroll. No clickbait. Just good writing about code.
          </p>
        </div>
      </aside>
    </div>
  </div>
</Layout>

<style>
  .rack {
    padding: 2rem 0 4rem;
  }

  .rack__hero {
    text-align: center;
    padding: 2rem 0 3rem;
  }

  /* Main layout with sidebar */
  .rack__layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 1100px) {
    .rack__layout {
      grid-template-columns: 1fr 280px;
    }
  }

  .rack__main {
    min-width: 0; /* Prevent overflow */
  }

  /* =====================================================
     SHELF REDESIGN - Newsstand Style
     ===================================================== */
  .rack__shelf {
    margin-bottom: 3rem;
  }

  .shelf__container {
    position: relative;
    margin-bottom: 0.75rem;
  }

  /* Backboard panel - gives depth and visual separation */
  .shelf__container::before {
    content: "";
    position: absolute;
    top: 0;
    left: -1rem;
    right: -1rem;
    bottom: 0;
    background: linear-gradient(
      180deg,
      #e8e0d0 0%,
      #ddd5c5 50%,
      #d5cdc0 100%
    );
    border: 3px solid var(--ink-rich);
    border-radius: 12px 12px 0 0;
    box-shadow:
      inset 0 2px 8px rgba(0,0,0,0.08),
      inset 0 -4px 12px rgba(0,0,0,0.05);
    z-index: -1;
  }

  /* Metal rail at bottom */
  .shelf__ledge {
    position: relative;
    height: 24px;
    margin-left: -1rem;
    margin-right: -1rem;
    background: linear-gradient(
      180deg,
      #7a7a7a 0%,
      #5a5a5a 15%,
      #4a4a4a 50%,
      #3a3a3a 85%,
      #2a2a2a 100%
    );
    border: 3px solid var(--ink-rich);
    border-top: none;
    border-radius: 0 0 8px 8px;
    box-shadow:
      0 6px 16px rgba(0,0,0,0.25),
      inset 0 2px 0 rgba(255,255,255,0.15);
  }

  /* Metal shine highlight */
  .shelf__ledge::before {
    content: "";
    position: absolute;
    top: 2px;
    left: 10%;
    right: 10%;
    height: 4px;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(255,255,255,0.3) 20%,
      rgba(255,255,255,0.5) 50%,
      rgba(255,255,255,0.3) 80%,
      transparent 100%
    );
    border-radius: 2px;
  }

  /* Lip/front edge of shelf */
  .shelf__ledge::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(
      180deg,
      #3a3a3a 0%,
      #1a1a1a 100%
    );
    border-radius: 0 0 5px 5px;
  }

  /* Featured shelf gets extra emphasis */
  .rack__shelf--featured .shelf__container::before {
    background: linear-gradient(
      180deg,
      #f5efe5 0%,
      #ebe5d8 50%,
      #e0d8c8 100%
    );
    box-shadow:
      inset 0 2px 8px rgba(0,0,0,0.06),
      inset 0 -4px 12px rgba(0,0,0,0.04),
      0 0 0 1px rgba(0,0,0,0.05);
  }

  /* Per-publication shelves get accent color tint */
  .rack__shelf:not(.rack__shelf--featured) .shelf__container::before {
    background: linear-gradient(
      180deg,
      color-mix(in srgb, var(--shelf-accent, #888) 5%, #e8e0d0) 0%,
      color-mix(in srgb, var(--shelf-accent, #888) 8%, #ddd5c5) 50%,
      color-mix(in srgb, var(--shelf-accent, #888) 10%, #d5cdc0) 100%
    );
  }

  .actions-row {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin: 2rem 0 3rem;
  }

  .feature-section {
    margin: 3rem 0;
  }

  .shelf__cta {
    margin-top: 0.75rem;
    padding-left: 0.5rem;
  }

  /* Stagger covers for visual interest */
  .shelf__item:nth-child(even) {
    margin-top: 1.5rem;
  }

  .shelf__item:nth-child(3n) {
    margin-top: 0.75rem;
  }

  /* === SIDEBAR === */
  .rack__sidebar {
    display: none;
  }

  @media (min-width: 1100px) {
    .rack__sidebar {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      position: sticky;
      top: 100px;
      height: fit-content;
    }
  }

  .sidebar-card {
    background: var(--surface-raised);
    border: 2px solid var(--ink-rich);
    border-radius: 8px;
    padding: 1.25rem;
    box-shadow: 4px 4px 0 var(--ink-rich);
  }

  .sidebar-card--accent {
    background: var(--surface-accent);
    border-style: dashed;
    box-shadow: none;
  }

  .sidebar-card__title {
    font-family: var(--font-display);
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ink-rich);
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px dashed var(--ink-faint);
  }

  .sidebar-card__text {
    font-size: 0.9rem;
    color: var(--ink-body);
    line-height: 1.5;
    margin-bottom: 0.75rem;
  }

  .sidebar-card__text:last-child {
    margin-bottom: 0;
  }

  .sidebar-card__more {
    display: block;
    margin-top: 1rem;
    font-size: 0.8rem;
  }

  /* Publication links */
  .pub-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .pub-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem;
    border-radius: 6px;
    transition: background 0.15s ease;
  }

  .pub-link:hover {
    background: var(--surface-sunken);
  }

  .pub-link__dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--pub-color);
    border: 2px solid var(--ink-rich);
    flex-shrink: 0;
  }

  .pub-link__name {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--ink-body);
  }

  .pub-link:hover .pub-link__name {
    color: var(--ink-rich);
  }

  /* Recent posts */
  .recent-posts {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .recent-post {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    padding: 0.5rem;
    border-radius: 6px;
    transition: background 0.15s ease;
  }

  .recent-post:hover {
    background: var(--surface-sunken);
  }

  .recent-post__pub {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .recent-post__title {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--ink-body);
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .recent-post:hover .recent-post__title {
    color: var(--ink-rich);
  }
</style>
