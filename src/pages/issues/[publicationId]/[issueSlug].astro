---
import Layout from '../../../components/layout/Layout.astro';
import IssueOpener from '../../../components/issues/IssueOpener.astro';
import Toc from '../../../components/issues/Toc.astro';

import { getCollection, getEntry, type CollectionEntry } from 'astro:content';
import { getIssue, getPostsForIssue } from '../../../lib/data';
import { buildIssueLineup } from '../../../lib/lineup';

export async function getStaticPaths() {
  const issues = await getCollection('issues');
  const publications = await getCollection('publications');
  const pubIds = new Set(publications.map((p) => p.id));

  return issues
    .filter((issue: CollectionEntry<'issues'>) =>
      pubIds.has(issue.data.publicationId)
    )
    .map((issue: CollectionEntry<'issues'>) => ({
      params: {
        publicationId: issue.data.publicationId,
        issueSlug: issue.data.issueSlug,
      },
    }));
}

const { publicationId, issueSlug } = Astro.params;
if (!publicationId || !issueSlug) {
  throw new Error('Missing issue params');
}

const publication = await getEntry('publications', publicationId);
const issue = await getIssue(publicationId, issueSlug);
if (!publication || !issue) {
  throw new Error('Issue not found');
}

const posts = await getPostsForIssue(publicationId, issueSlug);
const { lead, secondary, briefs } = buildIssueLineup(posts as any, issue as any);
const hasLead = !!lead;

const formattedDate = new Date(issue.data.date).toLocaleDateString('en-US', {
  month: 'long',
  day: 'numeric',
  year: 'numeric',
});
---
<Layout
  title={`${issue.data.displayTitle} - ${publication.data.name}`}
  publication={publication}
  accent={publication.data.accent}
>
  <div class="issue-page page-shell page-content">
    <header class="issue-header">
      <span class="issue-label">{publication.data.name}</span>
      <h1 class="issue-title">{issue.data.displayTitle}</h1>

      <div class="issue-meta">
        <span>Vol {issue.data.volume}</span>
        <span class="meta-sep">|</span>
        <span>No {issue.data.number}</span>
        <span class="meta-sep">|</span>
        <span>{formattedDate}</span>
        <span class="badge" style={`background: ${publication.data.accent}; color: white; border-color: ${publication.data.accent}`}>
          {issue.data.status}
        </span>
        <span class="theme-tag">
          {issue.data.theme}
        </span>
      </div>

      {issue.data.notesFromEditor && (
        <p class="editor-notes">
          {issue.data.notesFromEditor}
        </p>
      )}
    </header>

    {hasLead ? (
      <>
        <IssueOpener
          issue={issue as any}
          publication={publication as any}
          lead={lead as any}
          secondary={secondary as any}
          briefs={briefs as any}
        />
        <div class="toc-section">
          <Toc posts={posts as any} sections={publication.data.sections} />
        </div>
      </>
    ) : (
      <div class="pending-card">
        <span class="pending-label">Lineup pending</span>
        <p class="pending-text">
          This issue is missing a lead story. Add a lead post to publish its opener.
        </p>
      </div>
    )}
  </div>
</Layout>

<style>
  .issue-page {
    padding: 2rem 0;
  }

  .issue-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 3px solid var(--ink-rich);
  }

  .issue-label {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--ink-muted);
    margin-bottom: 0.5rem;
  }

  .issue-title {
    font-size: clamp(2rem, 5vw, 3rem);
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  .issue-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-mono);
    font-size: 0.8rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ink-muted);
  }

  .meta-sep {
    color: var(--ink-faint);
  }

  .theme-tag {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    font-size: 0.7rem;
    background: var(--surface-sunken);
    border: 1px solid var(--ink-faint);
    border-radius: 4px;
  }

  .editor-notes {
    margin-top: 1rem;
    max-width: 700px;
    color: var(--ink-muted);
    font-style: italic;
    line-height: 1.6;
  }

  .toc-section {
    margin-top: 3rem;
  }

  .pending-card {
    background: var(--surface-raised);
    border: 2px solid var(--ink-rich);
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 6px 6px 0 var(--ink-rich);
  }

  .pending-label {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--ink-muted);
    margin-bottom: 0.5rem;
  }

  .pending-text {
    color: var(--ink-muted);
    line-height: 1.6;
  }
</style>
